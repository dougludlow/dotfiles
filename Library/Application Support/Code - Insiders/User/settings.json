{
    "[csharp]": {
        // "editor.defaultFormatter": "ms-dotnettools.csharp",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": false
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.tabSize": 3,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[sql]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },
    "[typescript]": {
        "editor.tabSize": 3,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.tabSize": 3,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "auto-rename-tag.activationOnLanguage": ["typescriptreact"],
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.fontFamily": "Dank Mono,RobotoMono Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontWeight": "300",
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true, // use rubocop for formatting
    "editor.renderWhitespace": "all",
    "editor.rulers": [80, 120],
    "editor.suggestSelection": "first",
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    "files.associations": {
        "*.erb": "erb",
        "*.json.tpl": "json",
        "*.ruleset": "xml"
    },
    "files.insertFinalNewline": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.ignoreMissingGitWarning": true,
    "html.format.wrapAttributes": "force-aligned",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "mssql.connections": [
        {
            "authenticationType": "SqlLogin",
            "database": "",
            "emptyPasswordInput": false,
            "password": "",
            "profileName": "NWEAService",
            "savePassword": true,
            "server": "localhost",
            "user": "sa"
        }
    ],
    "omnisharp.useEditorFormattingSettings": true,
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#b52e31"
        },
        {
            "name": "Auth0 Orange",
            "value": "#eb5424"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "C# Purple",
            "value": "#68217A"
        },
        {
            "name": "Gatsby Purple",
            "value": "#639"
        },
        {
            "name": "Go Cyan",
            "value": "#5dc9e2"
        },
        {
            "name": "Java Blue-Gray",
            "value": "#557c9b"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#00b3e6"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "prettier.printWidth": 120,
    "prettier.useTabs": true,
    "prettier.singleQuote": true,
    "prettier.semi": true,
    "security.workspace.trust.untrustedFiles": "open",
    "terraform.languageServer": {
        "external": true
    },
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Night Owl",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "editor.linkedEditing": true,
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.guides.bracketPairs": true,
    "sqlDatabaseProjects.netCoreDowngradeDoNotShow": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.suggest.showMethods": true,
    "editor.suggest.preview": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.snippetSuggestions": "top",
    "editor.inlineSuggest.enabled": true,
    "aws.codeWhisperer.includeSuggestionsWithCodeReferences": false,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.env.osx": {
        "PATH": "${env:PATH}:/opt/homebrew/bin:/opt/homebrew/sbin:/usr/local/bin"
    },
    "terminal.integrated.inheritEnv": false,
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false,
        "typescript": true
    },
    "git.enableCommitSigning": true,
    "aws.experiments": {
        "CodeWhisperer": false
    },
    "window.zoomLevel": 1,
    "dotfiles.repository": "dougludlow/dotfiles"
}
